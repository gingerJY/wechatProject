/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

swiper {
  width: 100%;
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.goWrite {
  position:fixed;
  bottom:0;
  width: 100%;
  height: 100rpx;
  background-color:rgba(255,255,255,0.9);
}

.goWriteText{
  display: block;
  width:80%;
  height: 80rpx;
  background-color:#ccc;
  color:white;
  text-align: center;
  line-height: 80rpx;
  margin: 10rpx auto;
  border-radius:10rpx;
}

.menu{
  margin-top: 30rpx;
  padding: 0 10rpx;
  display: flex;
  flex-direction: row;
}
.menuBox{
  width: 25%;
}
.menuImg{
  width: 150rpx;
  height: 200rpx;
  display: block; 
  margin: 0 auto;
  border-radius:10rpx;
}

.list{
  margin-top: 30rpx;
}
.listImg{
  height: 180rpx;
  margin-bottom: 10rpx;
}